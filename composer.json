{
  "config": {
    "platform": {
      "php": "8.0"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "require-dev": {
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "phpstan/phpstan": "^1.10",
    "slevomat/coding-standard": "^8.13"
  },
  "scripts": {
    "check": [
        "@composer check:lint",
        "@composer check:style",
        "@composer check:code"
    ],
    "check:code": "./vendor/bin/phpstan --memory-limit=1G analyse --level 5 modules",
    "check:lint": "./vendor/bin/parallel-lint modules",
    "check:style": "./vendor/bin/phpcs -s modules",
    "fix": ["@composer fix:style"],
    "fix:style": "./vendor/bin/phpcbf modules"
  }
}
